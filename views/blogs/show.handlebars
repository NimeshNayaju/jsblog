<div class="row">
  <h3>{{blog.title}}</h3>
  <div class="card blog col s12 m8">
    <div class="card-content">
      <span class="card-title">{{formatDate blog.date 'MMMM Do YYYY'}}</span>
      {{{blog.body}}}
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{blog.user.firstName}} {{blog.user.lastName}}</span>
        <img src="{{blog.user.image}}" class="circle responsive-img">
      </div>
      <div class="card-action">
        <a href="/blogs/users/{{blog.user.id}}">More from {{blog.user.firstName}}</a>
      </div>
    </div>
  </div>
</div>